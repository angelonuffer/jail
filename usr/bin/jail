#! /usr/bin/env bash

jail_name="default"
gnu_coreutils_commands="chcon chgrp chown chmod cp dd df dir dircolors install
                        ln ls mkdir mkfifo mknod mktemp mv realpath rm rmdir
			shred sync touch truncate vdir base64 cat cksum comm
			csplit cut expand fmt fold head join md5sum nl numfmt
			od paste ptx pr sha1sum sha224sum sha256sum sha384sum
			sha512sum shuf sort split sum tac tail tr tsort
			unexpand uniq wc arch basename chroot date dirname du
			echo env expr factor false groups hostid id link
			logname nice nohup nproc pathchk pinky printenv printf
			pwd readlink runcon seq sleep stat stdbuf stty tee test
			timeout true tty uname unlink uptime users who whoami
			yes"
copy_commands="bash $gnu_coreutils_commands"
build_script="/dev/null"

[ -f "$1" ] && while read -r line
do
	option=`echo $line | cut -d : -f 1`
	value=`echo $line | cut -d : -f 2`
	export $option=$value
done < "$1"

jail_dir="/usr/share/jail/$jail_name"

build_jail() {
	mkdir -p $jail_dir
	for command_name in $copy_commands
	do
		which $command_name | xargs -I %s dirname $jail_dir%s | xargs mkdir -p
		which $command_name | xargs -I %s cp %s $jail_dir%s
		which $command_name | xargs ldd | grep -o "/.*\.[0-9]" | xargs -I %s dirname $jail_dir%s | uniq | xargs mkdir -p
		which $command_name | xargs ldd | grep -o "/.*\.[0-9]" | xargs -I %s cp %s $jail_dir%s
	done
	cat $build_script | chroot $jail_dir > /dev/null 2> /dev/null
}

[ ! -d $jail_dir ] && build_jail
chroot $jail_dir
